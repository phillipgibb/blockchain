extends ../layout

block css
    link(rel="stylesheet", href="/css/dashboard/navbar.css")
    link(rel="stylesheet", href="/css/dashboard/home.css")
    link(rel="stylesheet", href="/css/dashboard/foot.css")
block js
    script(data-main="/js/entry/home" src="/js/lib/require.js")
block content
    include includes/navbar.pug
    +active("home")
    section.ds-home.uk-container.uk-container-center
        .dashboard-bgi
        .ds-home-title
            img.uk-container-center(src="/images/slogon.png")
        .ds-home-subnav
            .ds-home-2parts.uk-container.uk-container-center.uk-grid
                .uk-width-1-3.uk-text-center.uk-padding-remove
                    .cell
                        .uk-badge.uk-badge-notification.uk-badge-danger.badge= chainNum
                        a.uk-vertical-align.uk-container-center(href="/dashboard/chain")
                            p.uk-vertical-align
                                img(src="/images/chains.png" width="78" height="81")
                            span Chains
                .uk-width-1-3.uk-text-center.uk-padding-remove
                    .cell
                        .uk-badge.uk-badge-notification.uk-badge-danger.badge= contractNum
                        a.uk-vertical-align.uk-container-center(href="/dashboard/contract")
                            p.uk-vertical-align
                                img(src="/images/smart-contracts.png" width="80" height="62")
                            span Smart Contracts
                .uk-width-1-3.uk-text-center.uk-padding-remove
                    .cell
                        .uk-badge.uk-badge-notification.uk-badge-danger.badge= pointBalance
                        a#bluepoints.uk-vertical-align.uk-container-center
                            p.uk-vertical-align
                                img(src="/images/blue-points.png" width="75" height="79")
                            span Blue Points
    include includes/foot.pug